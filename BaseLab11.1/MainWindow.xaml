<Window x:Class="BaseLab11._1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BaseLab11._1"
        mc:Ignorable="d"
        Title="Лабораторная работа №11.1 - Базовый уровень " Height="250" Width="400" FontSize="13" Background="PaleTurquoise" FontWeight="Bold">
    <StackPanel Margin="11" VerticalAlignment="Center" >
        <Label Content="Введите первый катет прямоугольного треугольника" FontSize="13" Foreground="DarkBlue" />
        <TextBox x:Name="FirstText" Background="Gray"></TextBox>
        <Label Content="Введите второй катет прямоугольного треугольника" FontSize="13" Foreground="DarkBlue"/>
        <TextBox x:Name="SecondText" Background="Gray"></TextBox>
        <Button Content="Вычислить площадь прямоугольного треугольника" Margin="14" FontSize="13" Foreground="DarkBlue" Click="ButtonBase_OnClick" />
        <TextBlock x:Name="Result"></TextBlock>
    </StackPanel>
</Window>
